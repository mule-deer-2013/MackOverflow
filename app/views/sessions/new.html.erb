<% provide(:title, "Sign in") %>
<%= flash[:error] %>
<h1>Sign in</h1>

  <%= form_for(:session, url: sessions_path) do |f| %>

    <%= f.label :username %>
    <%= f.text_field :username %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit "Sign in" %>

  <%end%>

<p>New user? <%= link_to "Create an account >>", new_user_path %></p>

